<Application x:Class="DotNetDemoBin.Wpf.ShaderEffectsDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DotNetDemoBin.Wpf.ShaderEffectsDemo"
             xmlns:effects="clr-namespace:DotNetDemoBin.Wpf.ShaderEffectsDemo.Effects"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionaries/ImageResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <effects:GrayscaleShaderEffect x:Key="GrayscaleEffect" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
